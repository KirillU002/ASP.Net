@using ASP.Net.Models
@model List<OrderViewModel>

<div class="row">
@await Html.PartialAsync("AdminLeftMenu")

           <div class="col-9">
			   <div class="row">
               <h3>Список заказов</h3>
			   </div>

	<div class="row">
		<table class="table">
				<thead>
					<tr>
						<th>№</th>
						<th>Сумма</th>
						<th>Статус</th>
						<th>Пользователь</th>
						<th>Дата</th>
						<th>Время</th>
						<th></th>
						</tr>
				</thead>
				<tbode>
					@for (int i = 0; i < Model.Count; i++)
					{
						<tr>
							<td>@(i+1)</td>
							<td>@Model[i].Cost</td>
							<td>@Model[i].Status</td>
							<td></td>
							<td>@Model[i].CreatedDateTime.ToString("d")</td>
							<td>@Model[i].CreatedDateTime.ToString("t")</td>
							<td>
								<a class="btn btn-dark" asp-area="Admin"
								asp-controller="Order"
								asp-action="orderDetails"
								asp-route-orderId="@Model[i].Id">Подробнее</a></td>
							
						</tr>
					}
				</tbode>
			</table>
	</div>
</div>
</div>