
@model Login
<form method="post">
	<div class="container">
<div>
	<h3>Вход</h3> 
	</div>

	<div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>

	<div class="col-6">
		<label asp-for="UserName"></label><br />
		<input class="form-control" asp-for="UserName" />
		<span asp-validation-for="UserName" />
	</div>

	<div class="col-6">
		<label asp-for="Password"></label><br />
		<input class="form-control" asp-for="Password" />
		<span asp-validation-for="Password" />
	</div>

<div class="row">
	<div class="col-6">
	<input type="checkbox" name="rememberMe">

	<a class="form-control" href="/account/register">Регистрация нового пользователя</a>
	</div>
</div>

<div>
	<button class="btn btn-dark" type="submit" asp-controller="Account" asp-action="Login">Войти</button>
</div></div>
</form>