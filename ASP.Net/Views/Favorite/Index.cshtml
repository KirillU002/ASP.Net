@model List<ProductViewModel>

<div class="row">
    @for (int i = 0; i < Model.Count; i++)
{
    <div class="col-3">
            <div class="card h-100 box-shadow">
               @* <a asp-controller="Product" asp-route-id="@Model[i].Id"><img class="card-img-top" src="@Model[i].ImagePath"></a>*@

           <div class="card-body">
               <a style="color:black"
               asp-area=""
               asp-controller="Product"
               asp-action="Index"
                       asp-route-id="@Model[i].Id">
                        <h5>@Model[i].Name</h5>
                   </a>
                    <h5>@Model[i].Cost руб</h5>
               <a class="btn btn-dark"
               asp-area=""
               asp-controller="Cart"
               asp-action="Add"
                       asp-route-productId="@Model[i].Id"
               role="button">Добавить в корзину</a>

                    <a class="btn btn-danger"
                   asp-area=""
                   asp-controller="Favorite"
                   asp-action="Remove"
                       asp-route-productId="@Model[i].Id"
                   role="button">Удалить из избранного</a>
           </div>
        </div>
    </div>
}
</div>